<!-- *******************************	TYPES OF APPLICATIONS	********************************--><!-- <application_type>floating</application_type>    											--><!-- Floating applications aren't connected to a particular Page Controller						--><!-- they are useful for  --><!-- *******************************	OPTIONS 	********************************************--><!-- <requires_login>yes</requires_login>														--><!-- Can be set at the <application> level or the <controller> level							--><!-- <has_main_layout>no</has_main_layout>														--><!-- Enterprise (complex) apps will have a main layout and controller to deal with nav,etc  	--><!-- *******************************************************************************************--><applications><!-- ******************************	User Account Floating Application     ******************	--><!-- Needed for front end routing of a floating application isnt linked to a page				-->			<application>		<application_id>User_Account</application_id>		<floating_url_name>user</floating_url_name>		<requires_login>no</requires_login>		<has_main_layout>no</has_main_layout>				<controller default="true">					<controller_id>authenticate</controller_id>					<url_name>authenticate</url_name>					<link_text>authenticate</link_text>				</controller>	</application><!-- *******************	Content Management System Application Routing    ******************* -->			<application>		<application_id>Content_Management_System</application_id>		<requires_login>no</requires_login>		<has_main_layout>yes</has_main_layout>				<controller default="true">					<controller_id>pages_editor</controller_id>					<url_name>pages_editor</url_name>					<link_text>Page Editor</link_text>				</controller>				<controller>					<controller_id>xml_editor</controller_id>					<url_name>xml_editor</url_name>					<link_text>XML</link_text>				</controller>	</application><!-- ********************************	Photo Library Routing  *********************************-->				<application>	<application_id>Photo_Library</application_id>	<requires_login>no</requires_login>	<has_main_layout>yes</has_main_layout>		<controller default="true">			<controller_id>albums</controller_id>			<url_name>albums</url_name>			<link_text>Albums</link_text>		</controller>				<controller>			<controller_id>images</controller_id>			<url_name>images</url_name>			<link_text>Images</link_text>		</controller>				<controller>			<controller_id>album_sizes</controller_id>			<url_name>sizes</url_name>			<link_text>Size</link_text>		</controller>			</application><!-- ******************************	Articles Routing  ***************************** -->			<application>	<application_id>Articles</application_id>	<requires_login>no</requires_login>	<has_main_layout>yes</has_main_layout>		<controller default="true">			<controller_id>content</controller_id>			<url_name>content</url_name>			<link_text>content</link_text>		</controller>		<controller>			<controller_id>category</controller_id>			<url_name>category</url_name>			<link_text>category</link_text>		</controller>	</application><!-- ******************************	PRoducts Routing  ***************************** -->			<application>	<application_id>Products</application_id>	<requires_login>no</requires_login>	<has_main_layout>yes</has_main_layout>			<controller default="true">				<controller_id>content</controller_id>				<url_name>content</url_name>				<link_text>content</link_text>			</controller>			<controller>				<controller_id>category</controller_id>				<url_name>category</url_name>				<link_text>category</link_text>			</controller>	</application><!-- ******************************	Settings Manager Routing  ***************************** -->			<application>	<application_id>Settings_Manager</application_id>	<requires_login>no</requires_login>	<has_main_layout>yes</has_main_layout>		<controller default="true">			<controller_id>settings</controller_id>			<url_name>settings_manager</url_name>			<link_text>Settings</link_text>		</controller>	</application><!-- ******************************	Blog Routing  ***************************** -->			<application>		<application_id>Blog</application_id>			<requires_login>no</requires_login>			<has_main_layout>yes</has_main_layout>				<controller default="true">					<controller_id>blog</controller_id>					<url_name>blog</url_name>					<link_text>Blog</link_text>				</controller>						<controller>					<controller_id>categories</controller_id>					<url_name>categories</url_name>					<link_text>Categories</link_text>				</controller>	</application><!-- ***************************************************************************************************************** -->	</applications>